<h1>Tasks</h1>

<table  class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Done</th>
      <th>Project</th>
      <th>User</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.done ? 'Yes' : 'No' %></td>
        <td><%= task.project.name %></td>
        <td><%= task.user.email %></td>
        <td>
          <%= link_to 'Show', project_task_path(task.project, task) %>
          <%= link_to 'Edit', edit_project_task_path(task.project, task) %>
          <%= link_to "Delete", project_task_path(task.project, task), class: "btn btn-danger btn-block mb-2", style: "display: inline-block;", data: { turbo_method: :delete, "turbo-confirm": "Are you sure you want to delete this Task?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Task', new_project_task_path %>
