<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <%= render @project %>
    </div>
</div>

    <div class="col-md-4">
      <div class="mt-3">
        <%= link_to "Edit this project", edit_project_path(@project), class: "btn btn-primary btn-block m-2 ms-0" %>
        <%= link_to "Back to projects", projects_path, class: "btn btn-secondary btn-block m-2 " %>
        <%= link_to "Destroy this Project", project_path(@project), class: "btn btn-danger btn-block mb-2", style: "display: inline-block;", data: { turbo_method: :delete, "turbo-confirm": "Are you sure you want to delete this Project?" } %>
      </div>

      <%= link_to "Members", project_members_path(@project), class: "btn btn-info btn-block" %>
    </div>
  </div>
