<div class="row">
  <div class="col-md-6">
    <%= form_with(model: project) do |form| %>
      <% if project.errors.any? %>
        <div style="color: red;">
          <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
            <% project.errors.full_messages.each do |error_message| %>
              <li><%= error_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group mt-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group mt-3">
        <%= form.label :details %>
        <%= form.text_area :details, class: 'form-control' %>
      </div>

      <div class="form-group col-md-4 mt-3">
        <%= form.label :expected_completion_date %>
        <%= form.date_field :expected_completion_date, class: 'form-control' %>
      </div>

      <div class="form-group mt-3">
        <%= form.submit 'Save Project', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
