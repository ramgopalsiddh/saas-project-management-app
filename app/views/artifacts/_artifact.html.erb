<div id="<%= dom_id artifact %>">
  <p>
    <strong>Project:</strong>
    <%= artifact.project_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= artifact.name %>
  </p>

  <p>
    <strong>File:</strong>
  </p>

  <% if @file.attached? %>
    <% if @file.content_type.start_with?('image') %>
      <%= image_tag @file, width: "100%", height: "100%" %>
    <% elsif @file.content_type.start_with?('video') %>
      <video width="80%" height="80%" controls>
        <source src="<%= rails_blob_path(@file) %>" type="<%= @file.content_type %>">
        Your browser does not support the video tag.
      </video>
      <br><%= link_to "Download Video ðŸ’¾", rails_blob_path(@file, disposition: "attachment"), class: "btn btn-info m-3 ms-0" %>
    <% elsif @file.content_type.start_with?('audio') %>
      <audio controls>
        <source src="<%= rails_blob_path(@file) %>" type="<%= @file.content_type %>">
        Your browser does not support the audio element.
      </audio>
      <br><%= link_to "Download Audio ðŸŽµ", rails_blob_path(@file, disposition: "attachment"), class: "btn btn-info m-3 ms-0" %>
    <% elsif @file.content_type == 'application/pdf' %>
      <iframe src="<%= rails_blob_path(@file, disposition: "inline") %>" width="100%" height="400"></iframe>
      <%= link_to "Download PDF ðŸ’¾", rails_blob_path(@file, disposition: "attachment"), class: "btn btn-info m-3 ms-0"%>
      <%= link_to "Show Full PDFðŸ”Ž", artifact.file, class: "btn btn-info m-3 ms-0" %>
    <% elsif @file.content_type == 'application/vnd.ms-powerpoint' || @file.content_type == 'application/vnd.openxmlformats-officedocument.presentationml.presentation' || @file.content_type == 'application/vnd.ms-powerpoint.presentation.macroenabled.12' %>
      <%= link_to "View PowerPoint Presentation ðŸ“Š", rails_blob_path(@file, disposition: "inline"), class: "btn btn-info m-3 ms-0" %>
      <%= link_to "Download PowerPoint ðŸ’¾", rails_blob_path(@file, disposition: "attachment"), class: "btn btn-info m-3 ms-0" %>
    <% elsif @file.content_type == 'application/vnd.oasis.opendocument.spreadsheet' || @file.content_type == 'application/vnd.ms-excel' || @file.content_type == 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet' || @file.content_type == 'application/vnd.ms-excel.sheet.macroenabled.12' %>
      <%= link_to "View Spreadsheet ðŸ“Š", rails_blob_path(@file, disposition: "inline"), class: "btn btn-info m-3 ms-0" %>
      <%= link_to "Download Spreadsheet ðŸ’¾", rails_blob_path(@file, disposition: "attachment"), class: "btn btn-info m-3 ms-0" %>
    <% else %>
      <% if @file.blob.filename.present? %>
        <%= link_to "Download File ðŸ’¾", rails_blob_path(@file, disposition: "attachment"), class: "btn btn-info m-3 ms-0" %>
      <% else %>
        <p>Unsupported file type</p>
      <% end %>
    <% end %>
  <% else %>
    <p>No file attached</p>
  <% end %>
</div>
